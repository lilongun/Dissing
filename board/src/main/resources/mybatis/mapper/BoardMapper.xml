<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dissing.board.dao.BoardDao">
     <resultMap type="cn.dissing.board.domain.PostInfo" id="order">
        <id property="id" column="id"/>
        <result property="orderNumber" column="order_number"/>
         <result property="product" column="product"/>
        <result property="productModel" column="product_model"/>
        <result property="quantity" column="quantity"/>
        <result property="status" column="status"/>
        <result property="qualityCheck" column="quality_check"/>
        <result property="shipping" column="shipping"/>
         <result property="createdDate" column="created_date"/>
         <result property="createdBy" column="created_by"/>
         <result property="lastModifiedDate" column="last_modified_date"/>
         <result property="lastModifiedBy" column="last_modified_by"/>
     </resultMap>

    <select id="queryPosts" resultMap="order">
        select id,order_number,product,product_model,quantity,status,shipping,created_date,created_by,last_modified_date,last_modified_by,quality_check
        from order_info where is_deleted=0
        <if test="orderNumber != null">
           and order_number=#{orderNumber}
        </if>
        <if test="product != null">
            and product = #{product}
        </if>
        <if test="productModel != null">
            and product_model=#{productModel}
        </if>
        <if test="quantity != null">
            and quantity=#{quantity}
        </if>
        <if test="status != null">
            and status=#{status}
        </if>
        <if test="shipping != null">
            and shipping=#{shipping}
        </if>
        <if test="id != null">
            and id=#{id}
        </if>
        limit #{beginPos},#{pageSize}
    </select>

    <insert id="savePost">
        insert into order_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderNumber != null">
                order_number,
            </if>
            <if test="product != null">
                product,
            </if>
            <if test="productModel != null">
                product_model,
            </if>
            <if test="quantity != null">
                quantity,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="shipping != null">
                shipping,
            </if>
            <if test="qualityCheck != null">
                quality_check,
            </if>
        </trim>
        <trim prefix=" values(" suffix=")" suffixOverrides=",">
            <if test="orderNumber != null">
                #{orderNumber},
            </if>
            <if test="product != null">
                #{product},
            </if>
            <if test="productModel != null">
                #{productModel},
            </if>
            <if test="quantity != null">
                #{quantity},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="shipping != null">
                #{shipping},
            </if>
            <if test="qualityCheck != null">
                #{qualityCheck},
            </if>
        </trim>
    </insert>

    <update id="updatePost">
        update order_info
        <set>
            <if test="isDeleted != null">
                is_deleted = #{isDeleted},
            </if>
            <if test="product != null">
                product = #{product},
            </if>
            <if test="productModel != null">
                product_model = #{productModel},
            </if>
            <if test="quantity != null">
                quantity = #{quantity},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="shipping != null">
                shipping = #{shipping},
            </if>
            <if test="qualityCheck != null">
                quality_check = #{qualityCheck},
            </if>
            <if test="orderNumber != null">
                order_number = #{orderNumber},
            </if>
        </set>
        where id=#{id}
    </update>

    <select id="queryPostsCount" resultType="java.lang.Integer">
        select count(1) from order_info where is_deleted=0
        <if test="orderNumber != null">
            and order_number=#{orderNumber}
        </if>
        <if test="product != null">
            and product = #{product}
        </if>
        <if test="productModel != null">
            and product_model=#{productModel}
        </if>
        <if test="quantity != null">
            and quantity=#{quantity}
        </if>
        <if test="status != null">
            and status=#{status}
        </if>
        <if test="shipping != null">
            and shipping=#{shipping}
        </if>
    </select>
</mapper>
